<%- include("partials/header.ejs", { title: "Blog Post", heading: null, headerLink: "← Back to posts", headerLinkUrl: "/"}) %>
<main>
    <div class="post">
        <h1 class="post-title"><%= post.title  %></h1>
        <p class="post-caption"><%= post.author %> · <%= post.date %></p>
        <p class="post-description full-content"><%= post.content %></p>
        <hr>
        <div class="modify-post-btns">
                <a href="/edit/blog/<%= post.id %>" id="edit-btn-full">Edit</a>
                <form action="/delete/<% post.id %>" method="post">
                    <button type="submit" id="delete-btn-full">Delete</button>
                </form>
        </div>
    </div>
</main>